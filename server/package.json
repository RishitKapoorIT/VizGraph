  "keywords": [
    "data-visualization",
    "charts",
    "analytics",
    "api",
    "express",
    "mongodb"
  ],
  "author": "VizGraph Team",
  "license": "MIT",
  "dependencies": {
    "@napi-rs/canvas": "^0.1.78",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "canvas": "^3.2.0",
    "chart.js": "^4.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "google-auth-library": "^10.3.0",
    "googleapis": "^159.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "xlsx": "^0.18.5",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
