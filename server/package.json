{
  "name": "vizgraph-server",
  "version": "1.0.0",
  "description": "VizGraph API Server - Advanced data visualization platform",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "security-check": "npm audit",
    "docker:build": "docker build -t vizgraph-server .",
    "docker:run": "docker run -p 5000:5000 vizgraph-server"
