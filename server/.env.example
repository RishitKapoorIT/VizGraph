# Environment Configuration
NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# Database
MONGO_URI=mongodb://localhost:27017/vizgraph

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters

# Client URL (for CORS and email links)
CLIENT_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=676684150870-3e1jfjhl1ccimctf9vs6jd95pp7u0hbe.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (for password reset)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Hugging Face API (for AI summaries)
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_MODEL=facebook/bart-large-cnn

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@vizgraph.com
DEFAULT_ADMIN_PASSWORD=SecureAdminPass123!
DEFAULT_ADMIN_NAME=VizGraph Admin

# API Keys (comma-separated for external integrations)
API_KEYS=api-key-1,api-key-2

# Redis Configuration (optional, for production caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=20971520
ALLOWED_FILE_TYPES=csv,xls,xlsx

# Security Configuration
BCRYPT_ROUNDS=14
LOGIN_ATTEMPTS_LIMIT=5
ACCOUNT_LOCK_TIME=7200000

# Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/api/metrics

# Legacy OpenAI (for compatibility)
OPENAI_API_KEY=your-openai-api-key-if-needed